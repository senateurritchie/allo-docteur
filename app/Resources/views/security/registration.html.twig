									{{ form_errors(form) }}

									<div class="row">

										{% if app.request.attributes.get('type') == 'doctor' %}
											<div class="col-md-6 ">
												{{ form_row(form.user.firstname,{'label':false,'attr':{'placeholder':'Nom'}}) }}
											</div>

											<div class="col-md-6">
												<div class="form-group">
													{{ form_row(form.user.lastname,{'label':false,'attr':{'placeholder':'Prénom'}}) }}
