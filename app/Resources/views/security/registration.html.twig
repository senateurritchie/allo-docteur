											<div class="col-md-6">
												<div class="form-group">
													{{ form_row(form.doctorType,{'label':false,'placeholder':'Grade'}) }}
												</div>
											</div>

											<div class="col-md-6">
												<div class="form-group">
													{{ form_row(form.job,{'label':false,'placeholder':'Fonction'}) }}
